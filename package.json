    "astro": "^2.1.2",
    "astro-eslint-parser": "^0.12.0",
    "husky": "^8.0.3",
    "preact": "^10.13.1",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "solid-js": "^1.6.13",
    "svelte": "^3.56.0",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
